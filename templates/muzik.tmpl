         width="{{$square_size}}" height="{{$square_size}}"
         {{ if $entry.IsExternal }} target="_blank"{{ end }}>
        <div class="caption-wrapper">
          <p class="caption">
            {{ $entry.Title }}
          </p>
        </div>
        <img src="{{ $entry.ImageURL | resize "fill=250x250" }}"
             class="img-responsive"
             width="250" height="250" />
      </a>
    </div>
  {{ end }}
</div>

